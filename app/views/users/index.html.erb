<h2>List of Users</h2>
<%= link_to 'New User', new_user_path, {:class => "primary button"} %>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Student ID(s)</th>    
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @users.each do |user| {:class => "sign_in_out button dark"} %> 
  <tr>
    <td><%= "#{user.last_name}, #{user.first_name}" %></td>
    <td><%= user.email %></td>
    <td><%= user.student_ids %></td>
    <td><%= link_to 'Manage Buses', edit_user_path(user) %></td>
    <td><%= link_to 'Delete Account', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<%= will_paginate @users %>
<%= form_for users_path, :html=>{:method=>:get} do |f|%>
  <div class="search_box field">
    <%= f.label :search_box, "Search: "%>
    <%= f.text_field :search_box,:name=>"q" %>	
  </div>
<%end%>
</table>
<div class="user_links">
	<%= link_to 'Export as CSV', users_path(:format=>"csv", :q=>@q), :class => "export_link" %>  |  
	<%= link_to 'Delete All Users', confirm_destroy_all_users_path, :class => "delete_link" %>  |  
	<%= link_to 'Delete All Buses', confirm_destroy_all_busses_path, :class => "delete_link" %>
</div>
