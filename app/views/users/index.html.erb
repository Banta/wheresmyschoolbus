<h2>List of Users</h2>
<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @users.each do |user| {:class => "sign_in_out button dark"} %> 
  <tr>
    <td><%= "#{user.last_name}, #{user.first_name}" %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'View Details', user %></td>
    <td><%= link_to 'Manage Busses', edit_user_path(user) %></td>
    <td><%= link_to 'Delete Account', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<%= will_paginate @users %>
<%= form_for users_path, :html=>{:method=>:get} do |f|%>
  <div class="search_box field">
    <%= f.label :search_box, "Search: "%>
    <%= f.text_field :search_box,:name=>"q" %>	
  </div>
<%end%>

</table>

<br />

<div class="user_links">  
  <%= link_to 'New User', new_user_path, {:class => "primary button"} %>
</div>
